{
  "name": "miniapp",
  "private": true,
  "packageManager": "pnpm@10.28.2",
  "workspaces": [
    "apps/*"
  ],
  "scripts": {
    "dev:web": "pnpm -C apps/web dev",
    "dev:api": "pnpm -C apps/api dev",
    "dev": "concurrently -n web,api -c auto \"pnpm dev:web\" \"pnpm dev:api\"",
    "build:web": "pnpm -C apps/web build",
    "build:api": "pnpm -C apps/api build",
    "build": "pnpm build:web && pnpm build:api",
    "preview": "pnpm -C apps/web preview",
    "lint": "pnpm -C apps/web lint"
  },
  "devDependencies": {
    "concurrently": "^9.2.1"
  }
}
